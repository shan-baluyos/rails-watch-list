<h1>Movie Edit page</h1>

<%= form_for model: @movie do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :overview %>
  <%= f.text_field :overview %>
  <%= f.label :poster_url %>
  <%= f.text_field :poster_url %>
  <%= f.label :rating %>
  <%= f.number_field :rating %>
  <%= f.submit %>
<% end %>
